<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-row ">
  <div class= "col justify-content-lg-center" >
  <h2>Log in</h2>
  <hr>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <div class="form-actions btn-group btn-block">
      <%= f.button :submit, "Log in", class: "btn btn-outline-primary" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary" %>
    </div>
  </div>
  </div>
<% end %>